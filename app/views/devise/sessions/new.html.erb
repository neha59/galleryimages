
<div class="carousel-inner  ">
    <div class="carousel-item active">
        <div class="image-fluid ">
             <%= image_tag  "https://www.push10.com/wp-content/uploads/geneva-gloval-website-hero-design.jpg", width: "1300px ", height: "550px"%>
        </div>

        <div class="carousel-caption " >
             <div class="container-fluid">
                <div class="row p-5">
                   <div class="col-2"></div>
   
                <div class="col-8 text-center " >
                   <div class="container shadow-lg " style="padding-top:80px">
                     <h1>Sign in</h1><br>

                      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                      <div class="field">
                        <%= f.label :email %>: &nbsp  &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                       </div>

                      <div class="field">
                         <%= f.label :password %>: &nbsp&nbsp&nbsp
                         <%= f.password_field :password, autocomplete: "current-password" %>
                        </div>

                        <% if devise_mapping.rememberable? %>
                        <div class="field">
                            <%= f.check_box :remember_me %>&nbsp&nbsp&nbsp&nbsp
                            <%= f.label :remember_me %>
                        </div>
                        <% end %>

                        <div class="actions  ">
                           <%= f.submit "Log in" %>
                        </div>
                        <% end %>

                        <%= render "devise/shared/links" %>
                
                        <a href="http://127.0.0.1:3000/">Back</a>
                    </div>
                </div>
            </div>
        </div>    
               <div class="col-2"></div>
 </body>